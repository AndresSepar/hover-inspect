{
	"manifest_version": 2,

	"name": "Hover Inspect",
	"version": "1.1",
	"description": "The quickest way to inspect page elements",
	"author": "Shubin Ilya",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"icons": {
		"16": "icon.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["event.js"],
		"persistent": false
	},

	"permissions": ["activeTab"]
}